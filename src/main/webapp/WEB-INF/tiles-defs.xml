<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
    <definition name="default" template="/WEB-INF/views/layout/layout.jsp" preparer="tilesViewPreparer">
        <put-attribute name="title" value="HMS" />
        <put-attribute name="header" value="/WEB-INF/views/layout/header.jsp" />
        <put-attribute name="home" value="/WEB-INF/views/layout/home.jsp" />   
        <put-attribute name="menu" value="/WEB-INF/views/layout/menu.jsp" />    
        <put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp" />
    </definition>
    <definition name="*/*/*" extends="default">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
    </definition>
    <definition name="*/*" extends="default">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>  
    <definition name="*" extends="default">
        <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
        
    </definition>
    <definition name="common/login" template="/WEB-INF/views/common/login.jsp"/>
  
</tiles-definitions>
